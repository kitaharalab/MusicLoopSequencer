{
  "hosting": [
    {
      "target": "development",
      "public": "client/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/server/**"
      ],
      "rewrites": [{ "source": "/**", "destination": "/index.html" }]
    },
    {
      "target": "production",
      "public": "client/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/server/**"
      ],
      "rewrites": [{ "source": "/**", "destination": "/index.html" }]
    }
  ]
}
